{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>templates/renovate-config//renovate/helm"
  ],
  "lockFileMaintenance": {
    "automerge": false
  },
  "minor": {
    "automerge": false
  },
  "packageRules": [
    {
      "description": "Group all Longhorn updates together",
      "groupName": "longhorn-updates",
      "matchPackagePatterns": [
        "longhorn",
        "longhornio/.*"
      ]
    }
  ],
  "patch": {
    "automerge": false
  },
  "pin": {
    "automerge": false
  },
  "regexManagers": [
    {
      "datasourceTemplate": "docker",
      "description": "Update Longhorn Docker images in values.turingpi.yaml",
      "fileMatch": [
        "^helm/values\\.turingpi\\.yaml$"
      ],
      "matchStrings": [
        "repository:\\s*(?<depName>longhornio\\/[^\\s]+)\\s+tag:\\s*(?<currentValue>[^\\s]+)"
      ],
      "versioningTemplate": "docker"
    }
  ]
}
